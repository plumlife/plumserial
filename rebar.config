% -*- mode: erlang -*-
{erl_opts, [debug_info,
            {platform_define, "R15", 'gen_tcp_r15b_workaround'},
            {platform_define, "(R14|R15|R16B-)", 'crypto_compatibility'}]}.

{cover_enabled, true}.

{port_envs,  [ {"CC", "/usr/bin/gcc"}
             , {"LDFLAGS", "-lpthread"}
             ]}.

{port_specs, [{"priv/bin/serial", ["c_src/serial.c"]}]}.

{dialyzer_opts, [{warnings, [no_return,
                             no_unused,
                             no_improper_lists,
                             no_fun_app,
                             no_match,
                             no_opaque,
                             no_fail_call,
                             error_handling,
                             race_conditions,
                             behaviours,
                             unmatched_returns]}]}.
